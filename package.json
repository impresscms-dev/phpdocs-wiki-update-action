{
  "name": "phpdocs-wiki-update-action",
  "version": "0.0.0",
  "description": "This action generate documentation for PHP project and updates wiki.",
  "main": "src/index.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:imponeer/phpdocs-wiki-update-action.git"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "all": "npm install && npm run build && npm run format && npm run lint && npm run pack",
    "fast-all": "npm install && npm run build && npm run pack"
  },
  "keywords": [
    "github actions",
    "phpdocs",
    "wiki",
    "php project",
    "documentation",
    "phpdoc-md"
  ],
  "author": "Imponeer",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/github": "^5.0.0",
    "@zeit/ncc": "^0.22.3",
    "child_process": "^1.0.2",
    "flow-bin": "^0.154.0",
    "picomatch": "^2.3.0",
    "recursive-readdir-sync": "^1.0.6"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.11",
    "@types/node": "^16.4.9",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.29.0",
    "eslint-plugin-github": "^4.1.3",
    "prettier": "^2.3.2",
    "semver": "^7.3.5",
    "typescript": "^4.3.5"
  }
}
